            <div class="badges">
                {% for tech in technologies %}
                <div class="badge tech-badge">
                    <div class="icon-container">
                        <img src="/res/icons/{{ tech | lower }}.svg" alt="{{ tech }} logo.">
                    </div>
                    <div class="badge-name">
                        <p>{{ tech }}</p>
                    </div>
                </div>
                {% endfor %}
