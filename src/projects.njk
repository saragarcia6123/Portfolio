---
layout: layout.njk
title: Projects
---

<div class="projects-content page-content">
    <div class="projects-grid">
        {% for project in projects %}
        <a class="project-card github-card" target="_blank" href="{{ project.url }}">
            <div class="repo-name">
                <h2>{{ project.name }}</h2>
            </div>
            <div class="repo-description">
                {{ project.description }}
            </div>
            <div class="tags">
                {% for tag in project.tags %}
                <p class="tag tag-{{ tag | lower }}"> # {{ tag }}</p>
                {% endfor %}
            </div>
        </a>
        {% endfor %}
    </div>
</div>